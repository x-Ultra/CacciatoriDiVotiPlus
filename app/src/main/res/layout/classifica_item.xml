<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/booklet_item_background">

    <it.iCarrambaDT.cacciatoriDiVoti.customViews.MyTextView
        android:id="@+id/tvPostoCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="0."
        android:textSize="@dimen/textViewCfuDim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <it.iCarrambaDT.cacciatoriDiVoti.customViews.MyTextView
        android:id="@+id/tvMateriaCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autoText="false"
        android:maxWidth="140dp"
        android:maxHeight="40dp"
        android:text="Materia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textViewMateriaDim"
        app:autoSizeMaxTextSize="@dimen/textViewMateriaDim"
        app:autoSizeMinTextSize="@dimen/textViewVotoMinDim"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvVotoCL"
        app:layout_constraintStart_toEndOf="@+id/tvPostoCL"
        app:layout_constraintTop_toTopOf="parent" />

    <it.iCarrambaDT.cacciatoriDiVoti.customViews.MyTextView
        android:id="@+id/tvVotoCL"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/voto_background"
        android:text="20"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvTempoCL"
        app:layout_constraintTop_toTopOf="parent" />

    <it.iCarrambaDT.cacciatoriDiVoti.customViews.MyTextView
        android:id="@+id/tvTempoCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="00:00"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>